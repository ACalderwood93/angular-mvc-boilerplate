<section class="section">
    <div class="container" ng-class="{'loading-mask' : isLoading == true}">
        <div class="columns is-multiline">
            <div ng-repeat="crew in nakama"
                 class="column is-one-quarter">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by5">
                            <img ng-src="{{crew.image_url}}" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content">
                                <p class="title is-4">{{crew.name}}</p>
                                <p class="subtitle is-6">{{crew.crew_position}}</p>
                            </div>
                        </div>

                        <div class="content">
                            <small>Bounty: <img src="https://vignette.wikia.nocookie.net/onepiece/images/f/fe/Beli_Small.png/revision/latest?cb=20141206092015" alt="Beli Small" />&nbsp;{{convertMoney(crew.bounty)}}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>